<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="xobyx.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_xobyxs</item>

        <item name="android:popupMenuStyle">@style/xobyx.Light.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Xobyxs</item>
        <item name="android:spinnerStyle">@style/DropDownNav.Xobyxs</item>
        <item name="android:listViewStyle">@style/xobyx.Light.ListView.Main</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Xobyxs</item>

        <!--<item name="android:actionBarStyle">@style/xobyx.Light.ActionBar</item>-->

        <item name="android:actionModeCloseDrawable">@drawable/close_w</item>
        <item name="android:windowBackground">@color/holo_white</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Xobyxs</item>

        <item name="android:dialogTheme">@style/s_dialog</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_l</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_l</item>


    </style>

    <style name="xobyx.Light.SearchView">


    </style>

    <style name="xobyx.Light.ListView.Main">
        <item name="android:listSelector">@drawable/selector_base</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>


    </style>

    <style name="xobyx.Light.NoActionBar" parent="xobyx.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="xobyx.Light.dialog" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:width">370dp</item>
    </style>

    <style name="xobyx.Light.trans">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="s_dialog" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <!--<item name="android:background">@color/sudani_color_m</item>-->

        <item name="android:windowBackground">@android:drawable/dialog_holo_light_frame</item>
        <!-- <item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:width">370dp</item>
    </style>

    <style name="m_dialog" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:background">@color/mtn_color_m</item>
        <item name="android:width">370dp</item>
    </style>

    <style name="z_dialog" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:background">@color/zain_color_m</item>
        <item name="android:windowBackground">@android:drawable/screen_background_dark_transparent
        </item>
        <item name="android:width">370dp</item>
    </style>




    <style name="xobyx.Light.CustomPanel" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


    <style name="xobyx.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">

        <item name="android:background">@drawable/ab_solid_dark_holo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Xobyxs</item>

        <item name="android:titleTextStyle">@style/xobyx.Light.ActionBar.text</item>

        <item name="android:textColor">#ffe4e4e4</item>

        <item name="android:itemPadding">4dip</item>


        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:height">65dp</item>
    </style>


    <style name="xobyx.Light.ActionBar.text">
        <item name="android:textColor">#ffc3c4bc</item>

        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="xobyx.Light.PopupMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_xobyxs</item>
    </style>

    <style name="DropDownListView.Xobyxs" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_xobyxs</item>
    </style>

    <style name="ActionBarTabStyle.Xobyxs" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_xobyxs</item>
    </style>

    <style name="DropDownNav.Xobyxs" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_xobyxs</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_xobyxs</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_xobyxs</item>
    </style>

    <style name="ProgressBar.Xobyxs" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_xobyxs</item>
    </style>

    <style name="ActionButton.CloseMode.Xobyxs" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_xobyxs</item>
    </style>

    <!-- this style is only referenced in TouchedItem Light.DarkActionBar based theme -->
    <style name="Theme.Xobyxs.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/xobyx.Light.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Xobyxs</item>
    </style>

</resources>