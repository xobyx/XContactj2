        <item name="send_sms">@drawable/sendsms_mt</item>
        <item name="make_call">@drawable/dialer_mt</item>
        <item name="expand">@drawable/more_mt</item>
        <item name="history">@drawable/history_mt</item>
        <item name="messges">@drawable/messges_mt</item>
        <item name="p_net_text_color">#a2FfFFFF</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>
