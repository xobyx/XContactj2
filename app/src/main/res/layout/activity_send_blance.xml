<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:textSize="25dp"
        android:paddingTop="30dp"

        android:text="@string/xobyx.send_balance_to" />


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/sendb_sendtolayout"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/trb_to_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="phone" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/trb_pik_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/xobyx.contacts"
             />


    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/sendb_amountlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/trb_value_bicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="number"
             />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/sendb_pinlayout"
        android:layout_height="wrap_content">



        <EditText
            android:id="@+id/trb_sec_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="numberPassword"/>


        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/trb_ser_use_chaek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/use_custom_pin" />
    </android.support.design.widget.TextInputLayout>



    <android.support.v7.widget.AppCompatButton
        android:id="@+id/trb_ok"


        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/send_blance" />
</LinearLayout>