<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="1">

    <xobyx.xcontactj.views.LetterImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/about"
        app:draw_net_logo="false"
        app:fchar="X"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        tools:layout_constraintTop_creator="1"
        android:id="@+id/letterImageView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <xobyx.xcontactj.views.FontTextView android:id="@+id/num_child_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:font="@string/bein_font"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/re"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/letterImageView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/re"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:autoLink="email"
        android:background="#cce0e0e0"
        android:text="@string/about"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="144dp"
        app:layout_constraintTop_toBottomOf="@+id/letterImageView"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        app:layout_constraintHorizontal_bias="0.57" />
</android.support.constraint.ConstraintLayout>
