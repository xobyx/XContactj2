<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="1"
    tools:context="xobyx.xcontactj.activities.AboutActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="0dp"
    android:layout_weight=".5">
    <xobyx.xcontactj.views.LetterImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:fchar="X"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/about" />

</LinearLayout>

    <xobyx.xcontactj.views.FontTextView
        android:id="@+id/num_child_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:font="akbar.ttf"
        android:textColor="?attr/colorPrimaryDark"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="35sp" />

    <TextView
        android:layout_width="302sp"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:autoLink="email"
        android:background="#cce0e0e0"
        android:text="@string/about"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>
