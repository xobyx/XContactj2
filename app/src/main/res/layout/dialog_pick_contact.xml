<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/num_child_text"
        style="@style/xobyx.Light.ListView.kList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|left"
        android:layout_marginBottom="10dp"
        android:background="#ff3eb8e6"
        android:gravity="center_horizontal"
        android:text="Select Number:"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@android:color/black"
        android:textIsSelectable="false" />

    <ListView
        android:id="@+id/cd_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="@null"
        android:choiceMode="singleChoice" />

    <CheckBox
        android:id="@+id/cd_check_defaut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set As Default Number"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cd_cancel"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:text="Cancel" />
        <Button
            android:id="@+id/cd_ok"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/cd_cancel"
            android:layout_weight="1"
            android:text="OK" />


    </LinearLayout>

</LinearLayout>