<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android" android:interpolator="@android:anim/accelerate_decelerate_interpolator" android:shareInterpolator="true" android:fillEnabled="true">
    <scale
        android:duration="500"
        android:fromXScale="1"
        android:fromYScale="1"
        android:toXScale="1.2"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toYScale="1.2" />
    <rotate
        android:duration="500"
        android:fromDegrees="0"
        android:startOffset="400"
        android:pivotX="50%"

        android:fillBefore="true"
        android:fillAfter="true"
        android:pivotY="50%"
        android:toDegrees="180" />
    <scale
        android:duration="500"
        android:fromXScale="1.2"
        android:fromYScale="1.2"
        android:toXScale="1"
        android:toYScale="1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="900"
         />

</set>